<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail border-1">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>
      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>

    </div>


    <div class="row">
    <div class="col-sm-4">
      <h2>Review this product</h2>
      <%= form_for([@product, @new_review]) do |f| %>

      <% if f.object.errors.any? %>
        <div class="alert alert-danger">
          <strong>The following errors prevented saving:</strong>
          <ul>
            <% f.object.errors.full_messages.each do |error| %>
              <li><%= error %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

        <div class="form-group">
        <div><%= f.label :description %></div>
        <div><%= f.text_field :description, class: 'form-control' %></div>
        <div><%= f.label :rating %></div>
        <div class="dropdown"><%= f.select :rating, [ '1','2','3','4','5' ], class: 'form-control', :prompt => 'Select One' %></div>
        <br>
        <div><%= f.submit 'Submit Review', class: 'btn btn-primary' %></div>
        </div>
      <% end %>
    </div>
    <div class="col-sm-8 pull-right">
        <ul class="list-group">
          <% @reviews.each do |review| %>
          <%= render 'review', review: review %>
            <% end %>
        </ul>
    <div>
    </div>

  </article>

</section>
